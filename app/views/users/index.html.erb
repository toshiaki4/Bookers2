<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
        <table class='table'>
          <thead>
            <tr>
          	  <th>image</th>
          	  <th>name</th>
          	  <th colspan="3"></th>
          	  <% @users.each do |user| %>
                </tr>
              </thead>
              <tbody>
                <tr>
              	  <td>
                    <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", format: 'jpeg', size: "40x40" %>
                  </td>
                  <td><%= user.name %></td>
                  <td><%= link_to "Show", user_path(user.id) %></td>
                </tr>
              <% end %>
          </tbody>
        </table>

    </div>
  </div>

</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', book: @book, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.id) do %>
                  <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", format: 'jpeg', size: "40x40" %>
                <% end %>
              </td>
              <td><%= link_to book.title, "/books/#{book.id}" %></td>
              <td><%= book.body %></td>
              <td><%#= link_to "Show",book_path(book.id) %></td>
            </tr>
            <% end %>
          </tr>
        </thead>
      </table>

    </div>
  </div>
</div>
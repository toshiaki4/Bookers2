
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', book: @book, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class='table'>
          <tr>
            <td>
              <%= link_to user_path(@book.user) do %>
                <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", format: 'jpeg', size: "40x40" %><br><%= @user.name %>
              <% end %>
            </td>
            <td><%= @book.title %></td>
            <td><%=@book.body %></td>
            <td><% if @user.id == current_user.id %>
                  <%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success" %>
                <% end %>
            </td>
            <td><% if @user.id == current_user.id %>
                  <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger destroy_book_18148" %>
                <% end %>
            </td>
          </tr>
        </table>
    </div>
  </div>
</div>

